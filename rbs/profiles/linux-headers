#!/bin/bash

DONT_REMOVE=1
DISABLE_MULTILIB=1

#2.6.37 - 3.0-rc6 causes black console when enabling kernel modeset with i915

VERSION="2.6.36.4"

DIR="linux-${VERSION}"
TARBALL="linux-${VERSION}.tar.bz2"
KPATCH=
##KPATCH="patch-2.6.38-git18.bz2"

SRC1=(
http://www.kernel.org/pub/linux/kernel/v2.6/${TARBALL}
http://www.kernel.org/pub/linux/kernel/v3.0/testing/$TARBALL
)

##SRC2=(
##http://www.kernel.org/pub/linux/kernel/v2.6/snapshots/$KPATCH
##)

MD5SUMS=(
0
##ff098feae3934fdf4eebd5066a90a173
)

Cross_Tools_Build(){
  local KARCH KCONF MODDIR
  case $(echo $BUILDTARGET | cut -f1 -d'-') in
    i?86)
      KARCH=i386
    ;;
    x86_64)
      KARCH=x86_64
    ;;
    *)
      echo "error not ready for this arch!"
      return 1
    ;;
  esac
  unpack_tarball $TARBALL || return 1
  cd $SRCDIR/$DIR || return 1
  if [ -f "$DOWNLOADDIR/$KPATCH" ]; then
    bzcat $DOWNLOADDIR/$KPATCH | patch -Np1 || return 1
  fi
  
  mkdir -vp $TCDIR/include || return 1
  make mrproper || return 1
  make ARCH=$KARCH headers_check || return 1
  make ARCH=$KARCH INSTALL_HDR_PATH=$TCDIR headers_install || return 1
  find $TCDIR/include -type d -exec chmod -v 755 {} \;
  find $TCDIR/include -type f -exec chmod -v 644 {} \;
  cd ../ || return 1
  rm -rf $DIR || return 1
}

build(){
  local KARCH KCONF MODDIR
  case $($CC -dumpmachine | cut -f1 -d'-') in
    i?86)
      KARCH=i386
    ;;
    x86_64)
      KARCH=x86_64
    ;;
    *)
      echo "error not ready for this arch!"
      return 1
    ;;
  esac
  unpack_tarball $TARBALL || return 1
  cd $SRCDIR/$DIR || return 1
  if [ -f "$DOWNLOADDIR/$KPATCH" ]; then
    bzcat $DOWNLOADDIR/$KPATCH | patch -Np1 || return 1
  fi
  
  make mrproper || return 1
  make ARCH=$KARCH headers_check || return 1
  make ARCH=$KARCH INSTALL_HDR_PATH=$TMPROOT/usr headers_install || return 1
  find $TMPROOT -type d -exec chmod -v 755 {} \;
  find $TMPROOT -type f -exec chmod -v 644 {} \;
  cd ../ || return 1
  rm -rf $DIR || return 1
}

