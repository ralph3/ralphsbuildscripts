#!/bin/bash

DISABLE_MULTILIB=1

VERSION="5.5"

DIR="net-snmp-${VERSION}"
TARBALL="net-snmp-${VERSION}.tar.gz"

SRC1=(
http://prdownloads.sourceforge.net/net-snmp/${TARBALL}
)

MD5SUMS=(
5b2551e7bd024fbbee84dca22a5f13a1
)

build(){
  unpack_tarball $TARBALL || return 1
  cd $SRCDIR/$DIR || return 1
  yes "" | CC="$CC $BUILD" CXX="$CXX $BUILD" ./configure --prefix=/usr \
    --libdir=/usr/$LIBSDIR --sysconfdir=/etc || return 1
  make || return 1
  make install DESTDIR=$TMPROOT || return 1
  cd $SRCDIR || return 1
  rm -rf $DIR || return 1
}

version_check_info(){
  ADDRESS='http://sourceforge.net/projects/net-snmp/files/'
  VERSION_STRING='net-snmp-%version%.tar.gz'
  VERSION_FILTERS='rc pre'
}
