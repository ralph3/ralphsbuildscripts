#!/bin/bash

DISABLE_MULTILIB=1

VERSION="1.2"

DIR="libepoxy-${VERSION}"
TARBALL="libepoxy-${VERSION}.tar.gz"

SRC1=(
https://raw.githubusercontent.com/ralph3/ralphsbuildscripts/master/src/libepoxy/${TARBALL}
)

MD5SUMS=(
12d6b7621f086c0c928887c27d90bc30
)

build(){
  unpack_tarball $TARBALL || return 1
  cd $SRCDIR/$DIR || return 1
  CC="$CC $BUILD" CXX="$CXX $BUILD" ./autogen.sh --prefix=/usr \
    --libdir=/usr/$LIBSDIR || return 1
  make || return 1
  make install DESTDIR=$TMPROOT || return 1
  cd ../ || return 1
  rm -rf $DIR || return 1
}

