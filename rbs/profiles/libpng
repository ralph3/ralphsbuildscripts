#!/bin/bash

VERSION="1.6.20"

DIR="libpng-${VERSION}"
TARBALL="libpng-${VERSION}.tar.xz"

SRC1=(
http://prdownloads.sourceforge.net/libpng/${TARBALL}
ftp://ftp.simplesystems.org/pub/libpng/png/src/$TARBALL
)

MD5SUMS=(
3968acb7c66ef81a9dab867f35d0eb4b
)

build(){
  unpack_tarball $TARBALL || return 1
  cd $SRCDIR/$DIR || return 1
  CC="$CC $BUILD" CXX="$CXX $BUILD" ./configure --prefix=/usr \
    --libdir=/usr/$LIBSDIR || return 1
  make || return 1
  make install DESTDIR=$TMPROOT || return 1
  set_multiarch $TMPROOT/usr/bin/libpng*-config || return 1
  cd ../ || return 1
  rm -rf $DIR || return 1
}

version_check_info(){
  ADDRESS='http://sourceforge.net/projects/libpng/files/?source=navbar'
  VERSION_STRING='libpng-%version%.tar.xz'
  VERSION_FILTERS='[a-z]'
}
