#!/bin/bash

[ "$(id -u)" != "0" ] && {
  echo "Run me as root please." >/dev/stderr
  exit 1
}

cd "$(dirname $0)" || exit 1
RBSDIR="$PWD"

source "$RBSDIR/shared" || exit 1

if [ "$1" == "sync" ]; then
  for x in $(rbs_all_profiles | sed '/\.ok$/d' | grep -vhFx "$(list_sources $(rbs_all_profiles))"); do
    if [ -e "$DOWNLOADDIR/${x}" ]; then
      echo -n "Removing <DOWNLOADDIR>/${x}..."
      rm -f $DOWNLOADDIR/${x}{,.ok}
      echo "  Done."
    fi
  done
  exit 0
fi

PROFILES=$*
if [ -z "$*" ]; then
  echo "Nothing to do!"
  exit 1
elif [ "$1" == "all" ]; then
  PROFILES="$(rbs_all_profiles)"
fi

download_sources $PROFILES || exit 1

exit 0
